---
// src/layouts/LuandaHubLayout.astro
import Header from '../components/luanda/Header.astro';
import Sidebar from '../components/luanda/Sidebar.astro';
import Footer from '../components/luanda/Footer.astro';
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Luanda Hub</title>
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <body class="bg-gray-100">
    <div class="flex h-screen bg-gray-200">
      <Sidebar />
      <div class="flex flex-col flex-1">
        <Header />
        <main class="flex-1 p-6">
          <slot />
        </main>
        <Footer />
      </div>
    </div>
  </body>
</html>
