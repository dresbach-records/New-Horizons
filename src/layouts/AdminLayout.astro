---
import Sidebar from '../components/academy-admin/layout/Sidebar.astro';
import Header from '../components/academy-admin/layout/Header.astro';
import StatsBar from '../components/academy-admin/layout/StatsBar.astro';
import { AstroFont } from 'astro-font'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <AstroFont
    config={[
      {
        name: 'Inter',
        src: [
          {
            style: 'normal',
            weight: '100 900',
            path: 'https://fonts.google.com/specimen/Inter',
          },
        ],
        preload: true,
        display: 'swap',
        selector: 'body',
        fallback: 'sans-serif',
      },
    ]}
  />
		<title>{title}</title>
	</head>
	<body class="bg-gray-100">
		<div class="flex h-screen">
      <Sidebar />
      <div class="flex-1 flex flex-col">
        <Header />
        <main class="p-6">
          <StatsBar />
          <slot />
        </main>
      </div>
    </div>
	</body>
</html>
