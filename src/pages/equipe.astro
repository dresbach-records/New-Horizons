<BaseLayout title="Equipe">
  <section class="relative py-32 overflow-hidden" id="missao">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-primary/5 to-transparent"></div>
      <div class="absolute bottom-0 left-0 w-64 h-64 bg-accent/5 rounded-full blur-3xl"></div>
    </div>
    <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
      <div class="max-w-3xl text-center mx-auto">
