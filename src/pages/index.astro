---
import BaseLayout from "../layouts/BaseLayout.astro";

const stats = [
    { value: "10k+", label: "Alunos Formados" },
    { value: "85%", label: "Taxa de Empregabilidade" },
    { value: "15+", label: "Países Atendidos" },
    { value: "50+", label: "Parceiros Globais" },
];

const challenges = [
  {
    icon: "trending_down",
    title: "Alto Desemprego",
    description: "Milhares de jovens sem oportunidades no mercado de trabalho tradicional africano.",
  },
  {
    icon: "school",
    title: "Gap Técnico",
    description: "Escassez de formação prática em tecnologias de ponta e linguagens de programação.",
  },
  {
    icon: "public_off",
    title: "Desconexão Global",
    description: "Dificuldade de acesso a vagas remotas internacionais por falta de certificação.",
  },
  {
    icon: "no_accounts",
    title: "Falta de Acesso",
    description: "Infraestrutura digital limitada impedindo o crescimento de novos talentos.",
  },
];

const solutionPoints = [
    { 
        icon: "groups", 
        title: "Mentoria com Experts Globais", 
        description: "Profissionais das maiores Big Techs do mundo doando conhecimento e criando rodas de networking."
    },
    { 
        icon: "code", 
        title: "Projetos Reais (Hands-on)", 
        description: "Os alunos trabalham em desafios reais de empresas parceiras, criando um portfólio sólido desde o dia 1."
    },
    { 
        icon: "work", 
        title: "Foco em Empregabilidade Remota", 
        description: "Preparação completa para o mercado internacional, incluindo aulas de inglês técnico e soft skills."
    },
];

const investorPoints = [
    { title: "Modelo de Receita SaaS", description: "Recorrência através de plataforma de contratação e talent sourcing para empresas globais." },
    { title: "Forte Critério ESG", description: "Impacto direto nos ODS da ONU, perfeito para fundos com foco em impacto social e diversidade." },
    { title: "Equity e Escalabilidade", description: "Operação ágil com capacidade de expansão para todo o continente africano e outros mercados emergentes." },
];

const partnerPoints = [
    { title: "Programas de Bolsas", description: "Empresas podem patrocinar turmas inteiras e ter prioridade na contratação dos melhores talentos." },
    { title: "Parcerias Governamentais", description: "Cooperação técnica para digitalização de serviços públicos e formação de base tecnológica nacional." },
    { title: "Employer Branding", description: "Posicionamento da sua marca como referência em responsabilidade social e fomento à tecnologia." },
];

--- 

<BaseLayout title="Construindo o Futuro Digital da África">
  <!-- Hero Section -->
  <section class="relative bg-dark text-white pt-48 pb-24">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute inset-0 bg-dark/70 z-10"></div>
      <img src="/images/hero-background.jpg" alt="African professionals working on computers" class="w-full h-full object-cover object-center"/>
    </div>
    <div class="container mx-auto px-6 text-center relative z-20">
        <div class="bg-accent/10 border border-accent/20 rounded-full px-4 py-1.5 text-xs font-bold uppercase tracking-wider text-accent mb-4 inline-block">
            IMPACTO SOCIAL MENSURÁVEL
        </div>
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-extrabold mb-4">
        Construindo o <span class="text-accent">Futuro Digital</span> da África
      </h1>
      <p class="text-lg md:text-xl text-slate-300 max-w-3xl mx-auto mb-10">
        Capacitando a nova geração de talentos africanos em Programação, Design e Empregabilidade Digital para o mercado global.
      </p>
      <div class="flex justify-center gap-4">
        <a href="#" class="bg-accent text-dark px-8 py-3 rounded-md font-bold text-lg hover:bg-opacity-90 transition-all transform hover:scale-105">
          Quero Investir
        </a>
        <a href="#" class="border-2 border-slate-500 text-white px-8 py-3 rounded-md font-bold text-lg hover:bg-slate-800 transition-all">
          Quero Ser Mentor
        </a>
      </div>
    </div>
    <!-- Stats Section -->
    <div class="relative z-20 container mx-auto px-6 mt-24">
        <div class="bg-dark/50 backdrop-blur-sm border border-slate-700 rounded-xl grid grid-cols-2 md:grid-cols-4 divide-y-2 md:divide-y-0 md:divide-x-2 divide-slate-700">
            {stats.map(stat => (
                <div class="text-center p-6">
                    <p class="text-3xl md:text-4xl font-extrabold text-white">{stat.value}</p>
                    <p class="text-sm uppercase tracking-wider text-slate-400 mt-1">{stat.label}</p>
                </div>
            ))}
        </div>
    </div>
  </section>

  <!-- The Challenge Section -->
  <section id="problema" class="py-24 bg-light">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-sm font-bold uppercase tracking-widest text-accent mb-2">O DESAFIO ATUAL</h2>
        <p class="text-3xl md:text-4xl font-bold text-dark">Por que o Projeto Novos Horizontes?</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {challenges.map(challenge => (
          <div class="bg-white p-8 rounded-xl border border-gray-200 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="mb-4">
                <span class="material-symbols-outlined text-4xl text-red-500">{challenge.icon}</span>
            </div>
            <h3 class="text-xl font-bold text-dark mb-2">{challenge.title}</h3>
            <p class="text-gray-600 leading-relaxed text-sm">{challenge.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solution Section -->
  <section id="solucao" class="py-24 bg-white">
    <div class="container mx-auto px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div class="relative">
            <img src="/images/solution-image.jpg" alt="Mentor discussing with a student" class="w-full h-auto object-cover rounded-xl shadow-2xl"/>
            <div class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm p-4 rounded-lg shadow-lg border border-gray-200">
                <p class="font-bold flex items-center gap-2"><span class="material-symbols-outlined text-primary">verified</span> Certificação Global</p>
            </div>
        </div>
        <div>
            <h2 class="text-sm font-bold uppercase tracking-widest text-accent mb-2">NOSSA SOLUÇÃO ESTRATÉGICA</h2>
            <p class="text-3xl md:text-4xl font-bold text-dark mb-8">Metodologia de Impacto 360°</p>
            <div class="space-y-6">
                {solutionPoints.map(point => (
                    <div class="flex items-start gap-4">
                        <div class="bg-primary/10 text-primary rounded-full p-2.5 mt-1">
                            <span class="material-symbols-outlined text-2xl">{point.icon}</span>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-dark">{point.title}</h3>
                            <p class="text-gray-600">{point.description}</p>
                        </div>
                    </div>
                ))}
            </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Value Proposition Section -->
  <section id="investidores" class="py-24 bg-light">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-sm font-bold uppercase tracking-widest text-accent mb-2">MODELO SUSTENTÁVEL E ESCALÁVEL</h2>
            <p class="text-3xl md:text-4xl font-bold text-dark">Gerando Valor para Investidores e Parceiros</p>
        </div>
        <div class="grid lg:grid-cols-2 gap-8">
            <!-- Investors Card -->
            <div class="bg-white p-8 rounded-xl border-2 border-transparent hover:border-primary transition-all duration-300 shadow-lg">
                <div class="flex items-center gap-4 mb-6">
                    <span class="material-symbols-outlined text-4xl text-primary">rocket_launch</span>
                    <h3 class="text-2xl font-bold text-dark">Investidores & VCs</h3>
                </div>
                <div class="space-y-4 mb-8">
                    {investorPoints.map(point => (
                        <div class="flex items-start gap-3">
                            <span class="material-symbols-outlined text-green-500 mt-1">check_circle</span>
                            <div>
                                <h4 class="font-bold text-dark">{point.title}</h4>
                                <p class="text-sm text-gray-600">{point.description}</p>
                            </div>
                        </div>
                    ))}
                </div>
                <a href="#" class="w-full text-center bg-dark text-white px-8 py-3 rounded-lg font-bold hover:bg-opacity-90 transition-colors">
                    Solicitar Pitch Deck
                </a>
            </div>

            <!-- Partners Card -->
            <div class="bg-white p-8 rounded-xl border-2 border-transparent hover:border-accent transition-all duration-300 shadow-lg">
                <div class="flex items-center gap-4 mb-6">
                    <span class="material-symbols-outlined text-4xl text-accent">handshake</span>
                    <h3 class="text-2xl font-bold text-dark">Parceiros Estratégicos</h3>
                </div>
                <div class="space-y-4 mb-8">
                    {partnerPoints.map(point => (
                        <div class="flex items-start gap-3">
                            <span class="material-symbols-outlined text-green-500 mt-1">check_circle</span>
                            <div>
                                <h4 class="font-bold text-dark">{point.title}</h4>
                                <p class="text-sm text-gray-600">{point.description}</p>
                            </div>
                        </div>
                    ))}
                </div>
                <a href="#" class="w-full text-center border-2 border-accent text-accent px-8 py-3 rounded-lg font-bold hover:bg-accent hover:text-white transition-colors">
                    Seja um Parceiro
                </a>
            </div>
        </div>
      </div>
  </section>
</BaseLayout>