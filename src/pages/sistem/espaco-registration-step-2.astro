---
import HORIZONSystemLayout from "@layouts/HORIZONSystemLayout.astro";
---

<HORIZONSystemLayout>
    <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-extrabold text-white tracking-tight">Registrar Novo Espaço</h2>
            <p class="text-slate-400 mt-3 max-w-2xl mx-auto">Etapa 2 de 3: Informe a localização e os detalhes de contato.</p>
        </div>

        <div class="bg-[#151b2d] border border-[#1e293b] rounded-2xl p-8">
            <div class="mb-8">
                <h3 class="text-sm font-bold text-white uppercase tracking-wider mb-2">Progresso do Cadastro</h3>
                <div class="w-full bg-[#0f172a] rounded-full h-2.5">
                    <div class="bg-accent h-2.5 rounded-full" style="width: 66%"></div>
                </div>
            </div>

            <form action="/sistem/espaco-registration-step-3" method="GET">
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="form-label" for="bairro">Bairro</label>
                            <input class="input-dark w-full" id="bairro" name="bairro" placeholder="Ex: Cazenga" type="text" required>
                        </div>
                        <div>
                             <label class="form-label" for="rua">Rua e Número</label>
                            <input class="input-dark w-full" id="rua" name="rua" placeholder="Ex: Rua da Liberdade, 123" type="text" required>
                        </div>
                    </div>
                    <div>
                        <label class="form-label" for="ponto-referencia">Ponto de Referência</label>
                        <input class="input-dark w-full" id="ponto-referencia" name="ponto-referencia" placeholder="Próximo ao mercado municipal" type="text">
                    </div>
                    <div class="pt-6 border-t border-white/10">
                         <h4 class="text-base font-bold text-white mb-4">Contato Responsável pelo Espaço</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="form-label" for="contact-name">Nome do Responsável</label>
                                <input class="input-dark w-full" id="contact-name" name="contact-name" placeholder="Nome completo" type="text" required>
                            </div>
                            <div>
                                <label class="form-label" for="contact-phone">Telefone para Contato</label>
                                <input class="input-dark w-full" id="contact-phone" name="contact-phone" placeholder="+244..." type="tel" required>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mt-8 pt-8 border-t border-white/10 flex justify-between items-center">
                    <a href="/sistem/espaco-registration-step-1" class="inline-flex items-center gap-2 text-sm font-bold text-slate-400 hover:text-white transition-colors group">
                        <span class="material-symbols-outlined text-lg group-hover:-translate-x-1 transition-transform">arrow_back</span>
                        Voltar
                    </a>
                     <button type="submit" class="w-auto bg-accent hover:bg-accent/80 text-slate-900 font-extrabold py-3 px-8 rounded-xl shadow-[0_10px_30px_-10px_rgba(34,197,94,0.4)] transition-all transform active:scale-[0.98] flex items-center justify-center gap-3 text-base">
                        <span>Avançar</span>
                        <span class="material-symbols-outlined font-bold">arrow_forward</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</HORIZONSystemLayout>

<style>
@layer components {
    .input-dark {
        @apply bg-white/5 border-white/10 text-white placeholder:text-slate-500 focus:border-accent focus:ring-accent/20 transition-all duration-300 py-3 px-4 rounded-xl;
    }
    .form-label {
         @apply block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3;
    }
}
</style>
