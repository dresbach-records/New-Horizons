---
import PublicLayout from "../../layouts/PublicLayout.astro";
---

<PublicLayout title="Solicitar Acesso | HORIZON System">
    <div class="w-full max-w-lg">
        <div class="mb-10 text-center">
            <h3 class="text-3xl font-extrabold text-white mb-2 tracking-tight">Solicitar Acesso ao Sistema</h3>
            <p class="text-slate-400 font-medium">Preencha o formulário para ingressar na plataforma administrativa.</p>
        </div>
        <form class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="md:col-span-2">
                <label class="form-label" for="name">Nome Completo</label>
                <input class="input-dark w-full" id="name" name="name" placeholder="Seu nome completo" required type="text"/>
            </div>
            <div>
                <label class="form-label" for="email">Email Corporativo</label>
                <input class="input-dark w-full" id="email" name="email" placeholder="nome@horizon.com" required type="email"/>
            </div>
            <div>
                <label class="form-label" for="phone">Telefone</label>
                <input class="input-dark w-full" id="phone" name="phone" placeholder="+244..." required type="tel"/>
            </div>
            <div>
                <label class="form-label" for="role">Função Desejada</label>
                <select class="input-dark w-full" id="role" name="role" required>
                    <option disabled selected value="">Selecione sua função</option>
                    <option value="agente">Agente Comunitário</option>
                    <option value="supervisor">Supervisor de Polo</option>
                    <option value="admin">Administrador</option>
                </select>
            </div>
            <div>
                <label class="form-label" for="location">Principal Bairro de Atuação</label>
                <input class="input-dark w-full" id="location" name="location" placeholder="Ex: Maianga" required type="text"/>
            </div>
            <div class="md:col-span-2">
                <label class="form-label" for="justification">Justificativa</label>
                <textarea class="input-dark w-full min-h-[120px] resize-y" id="justification" name="justification" placeholder="Por que você precisa de acesso a este sistema?" required></textarea>
            </div>
            <div class="md:col-span-2 mt-4">
                <button type="submit" class="w-full bg-accent hover:bg-accent/80 text-slate-900 font-extrabold py-4 rounded-xl shadow-[0_10px_30px_-10px_rgba(34,197,94,0.4)] transition-all transform active:scale-[0.98] flex items-center justify-center gap-3 text-base">
                    <span>Enviar para Aprovação</span>
                    <span class="material-symbols-outlined font-bold">send</span>
                </button>
            </div>
        </form>
         <div class="mt-10 pt-8 border-t border-white/10 text-center">
            <a href="/sistem/login" class="inline-flex items-center gap-2 text-sm font-bold text-slate-400 hover:text-white transition-colors group">
                <span class="material-symbols-outlined text-lg group-hover:-translate-x-1 transition-transform">arrow_back</span>
                Voltar ao Login
            </a>
        </div>
    </div>
</PublicLayout>
