---
import HORIZONSystemLayout from "@layouts/HORIZONSystemLayout.astro";
---

<HORIZONSystemLayout>
    <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-extrabold text-white tracking-tight">Registrar Novo Espaço</h2>
            <p class="text-slate-400 mt-3 max-w-2xl mx-auto">Etapa 3 de 3: Defina a disponibilidade, regras de uso e finalize o cadastro.</p>
        </div>

        <div class="bg-[#151b2d] border border-[#1e293b] rounded-2xl p-8">
            <div class="mb-8">
                <h3 class="text-sm font-bold text-white uppercase tracking-wider mb-2">Progresso do Cadastro</h3>
                <div class="w-full bg-[#0f172a] rounded-full h-2.5">
                    <div class="bg-accent h-2.5 rounded-full" style="width: 100%"></div>
                </div>
            </div>

            <form action="/sistem/HORIZON-System/espacos" method="GET">
                <div class="space-y-6">
                    <div>
                        <label class="form-label">Horário de Funcionamento</label>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <input class="input-dark w-full" placeholder="Seg-Sex Início" type="time">
                            <input class="input-dark w-full" placeholder="Seg-Sex Fim" type="time">
                            <input class="input-dark w-full" placeholder="Sábado Início" type="time">
                            <input class="input-dark w-full" placeholder="Sábado Fim" type="time">
                        </div>
                    </div>
                    <div>
                        <label class="form-label" for="rules">Regras e Condições de Uso</label>
                        <textarea class="input-dark w-full min-h-[150px]" id="rules" name="rules" placeholder="Liste as principais regras. Ex: Proibido fumar, responsabilidade pela limpeza, etc."></textarea>
                    </div>
                     <div>
                        <label class="form-label" for="initial-status">Status Inicial</label>
                        <select class="input-dark w-full" id="initial-status" name="initial-status">
                            <option value="Disponível" selected>Disponível para Agendamento</option>
                            <option value="Manutenção">Em Manutenção</option>
                            <option value="Uso Interno">Apenas para Uso Interno</option>
                            <option value="Indisponível">Indisponível Temporariamente</option>
                        </select>
                    </div>
                </div>

                <div class="mt-8 pt-8 border-t border-white/10 flex justify-between items-center">
                    <a href="/sistem/espaco-registration-step-2" class="inline-flex items-center gap-2 text-sm font-bold text-slate-400 hover:text-white transition-colors group">
                        <span class="material-symbols-outlined text-lg group-hover:-translate-x-1 transition-transform">arrow_back</span>
                        Voltar
                    </a>
                     <button type="submit" class="w-auto bg-accent hover:bg-accent/80 text-slate-900 font-extrabold py-3 px-8 rounded-xl shadow-[0_10px_30px_-10px_rgba(34,197,94,0.4)] transition-all transform active:scale-[0.98] flex items-center justify-center gap-3 text-base">
                        <span>Concluir Cadastro</span>
                        <span class="material-symbols-outlined font-bold">done_all</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</HORIZONSystemLayout>

<style>
    .input-dark {
        @apply bg-white/5 border-white/10 text-white placeholder:text-slate-500 focus:border-accent focus:ring-accent/20 transition-all duration-300 py-3 px-4 rounded-xl;
    }
    .form-label {
         @apply block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3;
    }
</style>
