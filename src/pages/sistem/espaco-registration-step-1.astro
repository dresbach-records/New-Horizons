---
import HORIZONSystemLayout from "@layouts/HORIZONSystemLayout.astro";
---

<HORIZONSystemLayout>
    <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-extrabold text-white tracking-tight">Registrar Novo Espaço</h2>
            <p class="text-slate-400 mt-3 max-w-2xl mx-auto">Etapa 1 de 3: Descreva a infraestrutura e suas principais características.</p>
        </div>

        <div class="bg-[#151b2d] border border-[#1e293b] rounded-2xl p-8">
            <div class="mb-8">
                <h3 class="text-sm font-bold text-white uppercase tracking-wider mb-2">Progresso do Cadastro</h3>
                <div class="w-full bg-[#0f172a] rounded-full h-2.5">
                    <div class="bg-accent h-2.5 rounded-full" style="width: 33%"></div>
                </div>
            </div>

            <form action="/sistem/espaco-registration-step-2" method="GET">
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="form-label" for="space-name">Nome do Espaço</label>
                            <input class="input-dark w-full" id="space-name" name="space-name" placeholder="Ex: Salão Comunitário Central" type="text" required>
                        </div>
                        <div>
                            <label class="form-label" for="space-type">Tipo de Espaço</label>
                            <select class="input-dark w-full" id="space-type" name="space-type" required>
                                <option disabled selected value="">Selecione o tipo</option>
                                <option>Salão de Eventos</option>
                                <option>Sala de Reunião</option>
                                <option>Sala de Aula</option>
                                <option>Área Externa Coberta</option>
                                <option>Quadra Esportiva</option>
                                <option>Outro</option>
                            </select>
                        </div>
                    </div>
                    <div>
                        <label class="form-label" for="capacity">Capacidade Máxima</label>
                        <input class="input-dark w-full" id="capacity" name="capacity" placeholder="Número de pessoas" type="number" required>
                    </div>
                    <div>
                        <label class="form-label" for="description">Breve Descrição do Espaço</label>
                        <textarea class="input-dark w-full min-h-[120px]" id="description" name="description" placeholder="Descreva os principais recursos, como equipamentos disponíveis, acessibilidade, etc."></textarea>
                    </div>
                </div>

                <div class="mt-8 pt-8 border-t border-white/10 flex justify-end">
                     <button type="submit" class="w-auto bg-accent hover:bg-accent/80 text-slate-900 font-extrabold py-3 px-8 rounded-xl shadow-[0_10px_30px_-10px_rgba(34,197,94,0.4)] transition-all transform active:scale-[0.98] flex items-center justify-center gap-3 text-base">
                        <span>Avançar</span>
                        <span class="material-symbols-outlined font-bold">arrow_forward</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</HORIZONSystemLayout>

<style>
    .input-dark {
        @apply bg-white/5 border-white/10 text-white placeholder:text-slate-500 focus:border-accent focus:ring-accent/20 transition-all duration-300 py-3 px-4 rounded-xl;
    }
    .form-label {
         @apply block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3;
    }
</style>
