---
import HORIZONSystemLayout from "@layouts/HORIZONSystemLayout.astro";
---

<HORIZONSystemLayout>
    <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
            <h2 class="text-4xl font-extrabold text-white tracking-tight">Cadastro de Nova ONG</h2>
            <p class="text-slate-400 mt-3 max-w-2xl mx-auto">Etapa 3 de 4: Anexe os documentos necessários e informe os dados do responsável legal.</p>
        </div>

        <div class="bg-[#151b2d] border border-[#1e293b] rounded-2xl p-8">
            <div class="mb-8">
                <h3 class="text-sm font-bold text-white uppercase tracking-wider mb-2">Progresso do Cadastro</h3>
                <div class="w-full bg-[#0f172a] rounded-full h-2.5">
                    <div class="bg-accent h-2.5 rounded-full" style="width: 75%"></div>
                </div>
            </div>

            <form action="/sistem/ong-registration-step-4" method="POST">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                    
                    <div class="md:col-span-2">
                        <h4 class="text-lg font-bold text-white border-b border-accent/20 pb-3 mb-6">Upload de Documentos</h4>
                    </div>

                    <div class="md:col-span-2">
                        <label for="social-statute" class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">Estatuto Social da ONG</label>
                        <div class="file-input-wrapper">
                            <input type="file" id="social-statute" name="social-statute" class="hidden">
                            <label for="social-statute" class="file-input-label">
                                <span class="material-symbols-outlined">upload_file</span>
                                <span>Clique para selecionar o arquivo PDF</span>
                            </label>
                        </div>
                    </div>

                    <div class="md:col-span-2">
                        <label for="registration-proof" class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">Comprovativo de Inscrição e Situação Cadastral</label>
                        <div class="file-input-wrapper">
                            <input type="file" id="registration-proof" name="registration-proof" class="hidden">
                            <label for="registration-proof" class="file-input-label">
                                <span class="material-symbols-outlined">upload_file</span>
                                <span>Clique para selecionar o arquivo PDF</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="md:col-span-2 pt-8">
                        <h4 class="text-lg font-bold text-white border-b border-accent/20 pb-3 mb-6">Dados do Responsável</h4>
                    </div>

                    <div>
                        <label for="responsible-name" class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">Nome Completo</label>
                        <input type="text" id="responsible-name" name="responsible-name" class="input-dark w-full rounded-xl">
                    </div>

                    <div>
                        <label for="responsible-role" class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">Cargo</label>
                        <input type="text" id="responsible-role" name="responsible-role" class="input-dark w-full rounded-xl" placeholder="Presidente, Diretor(a), etc.">
                    </div>

                     <div>
                        <label for="responsible-email" class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">E-mail do Responsável</label>
                        <input type="email" id="responsible-email" name="responsible-email" class="input-dark w-full rounded-xl">
                    </div>

                    <div>
                        <label for="responsible-phone" class="block text-xs font-bold text-slate-400 uppercase tracking-widest mb-3">Telefone do Responsável</label>
                        <input type="tel" id="responsible-phone" name="responsible-phone" class="input-dark w-full rounded-xl">
                    </div>
                </div>

                <div class="mt-12 pt-8 border-t border-white/10 flex justify-between items-center">
                    <a href="/sistem/ong-registration-step-2" class="inline-flex items-center gap-2 text-sm font-bold text-slate-400 hover:text-white transition-colors group">
                        <span class="material-symbols-outlined text-lg group-hover:-translate-x-1 transition-transform">arrow_back</span>
                        Voltar
                    </a>
                    <button type="submit" class="w-auto bg-accent hover:bg-accent/80 text-slate-900 font-extrabold py-3 px-8 rounded-xl shadow-[0_10px_30px_-10px_rgba(34,197,94,0.4)] transition-all transform active:scale-[0.98] flex items-center justify-center gap-3 text-base">
                        <span>Próximo</span>
                        <span class="material-symbols-outlined font-bold">arrow_forward</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</HORIZONSystemLayout>

<style>
    .input-dark {
        @apply bg-white/5 border-white/10 text-white placeholder:text-slate-500 focus:border-accent focus:ring-accent/20 transition-all duration-300;
    }
    .file-input-label {
        @apply w-full flex flex-col items-center justify-center gap-2 p-8 border-2 border-dashed border-white/20 rounded-xl cursor-pointer text-slate-400 hover:bg-white/5 hover:border-accent/50 hover:text-accent transition-all;
    }
</style>
