---
import HORIZONSystemLayout from "@layouts/HORIZONSystemLayout.astro";
---

<HORIZONSystemLayout>
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-2 px-3 py-1.5 bg-[#151b2d] border border-[#1e293b] rounded-full text-xs font-medium text-slate-400">
                <span class="w-1.5 h-1.5 rounded-full bg-accent"></span>
                Status: Todos
            </div>
            <div class="flex items-center gap-2 px-3 py-1.5 bg-[#151b2d] border border-[#1e293b] rounded-full text-xs font-medium text-slate-400">
                <span class="w-1.5 h-1.5 rounded-full bg-blue-500"></span>
                Luanda Província
            </div>
        </div>
        <div class="flex items-center gap-4">
            <div class="text-[10px] font-bold text-slate-500 uppercase tracking-widest">
                Total: 124 Organizações
            </div>
            <a href="/sistem/ong-registration-step-1" class="flex items-center gap-2 px-4 py-2 bg-accent hover:bg-accent/80 rounded-lg text-xs font-bold uppercase tracking-wider text-slate-900 transition-all">
                <span class="material-symbols-outlined text-sm">add</span>
                Nova ONG
            </a>
        </div>
    </div>
    <div class="bg-[#151b2d] rounded-2xl border border-[#1e293b] overflow-hidden shadow-2xl">
        <table class="w-full text-left border-collapse">
            <thead>
                <tr class="bg-[#0f172a] border-b border-[#1e293b]">
                    <th class="px-6 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Nome da ONG</th>
                    <th class="px-6 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Bairro / Zona</th>
                    <th class="px-6 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Responsável</th>
                    <th class="px-6 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Data Cadastro</th>
                    <th class="px-6 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest">Status</th>
                    <th class="px-6 py-4 text-[10px] font-bold text-slate-500 uppercase tracking-widest text-right">Ações</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[#1e293b]">
                <tr class="hover:bg-white/[0.02] transition-colors group">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 bg-accent/10 text-accent rounded-lg flex items-center justify-center font-bold text-xs">AF</div>
                            <div>
                                <p class="text-sm font-bold text-white uppercase tracking-tight">Angola Futurista</p>
                                <p class="text-[10px] text-slate-500 font-medium">ID: 48592-2024</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <span class="text-slate-300 font-medium">Talatona</span>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-slate-300 font-medium">Carlos Eduardo</p>
                        <p class="text-[10px] text-slate-500">carlos.ed@futurista.ao</p>
                    </td>
                    <td class="px-6 py-5 text-slate-400 text-xs">12 Jan 2024</td>
                    <td class="px-6 py-5">
                        <span class="px-3 py-1 bg-green-500/10 border border-green-500/20 text-green-500 text-[10px] font-bold uppercase rounded-full tracking-wider">Aprovado</span>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">edit</span></button>
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">visibility</span></button>
                            <button class="p-2 hover:bg-red-500/10 rounded-lg text-slate-500 hover:text-red-400"><span class="material-symbols-outlined text-lg">delete</span></button>
                        </div>
                    </td>
                </tr>
                <tr class="hover:bg-white/[0.02] transition-colors group">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 bg-yellow-500/10 text-yellow-500 rounded-lg flex items-center justify-center font-bold text-xs">SC</div>
                            <div>
                                <p class="text-sm font-bold text-white uppercase tracking-tight">Sementes do Cazenga</p>
                                <p class="text-[10px] text-slate-500 font-medium">ID: 32114-2024</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <span class="text-slate-300 font-medium">Cazenga</span>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-slate-300 font-medium">Maria José Bento</p>
                        <p class="text-[10px] text-slate-500">m.bento@sementes.org</p>
                    </td>
                    <td class="px-6 py-5 text-slate-400 text-xs">05 Fev 2024</td>
                    <td class="px-6 py-5">
                        <span class="px-3 py-1 bg-yellow-500/10 border border-yellow-500/20 text-yellow-500 text-[10px] font-bold uppercase rounded-full tracking-wider">Pendente</span>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">edit</span></button>
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">visibility</span></button>
                            <button class="p-2 hover:bg-red-500/10 rounded-lg text-slate-500 hover:text-red-400"><span class="material-symbols-outlined text-lg">delete</span></button>
                        </div>
                    </td>
                </tr>
                <tr class="hover:bg-white/[0.02] transition-colors group">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 bg-blue-500/10 text-blue-400 rounded-lg flex items-center justify-center font-bold text-xs">EV</div>
                            <div>
                                <p class="text-sm font-bold text-white uppercase tracking-tight">EducAção Viana</p>
                                <p class="text-[10px] text-slate-500 font-medium">ID: 88472-2024</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <span class="text-slate-300 font-medium">Viana (Sede)</span>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-slate-300 font-medium">Pedro Paulo André</p>
                        <p class="text-[10px] text-slate-500">pedro.andre@educacao.ao</p>
                    </td>
                    <td class="px-6 py-5 text-slate-400 text-xs">10 Fev 2024</td>
                    <td class="px-6 py-5">
                        <span class="px-3 py-1 bg-blue-500/10 border border-blue-500/20 text-blue-400 text-[10px] font-bold uppercase rounded-full tracking-wider">Em Análise</span>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">edit</span></button>
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">visibility</span></button>
                            <button class="p-2 hover:bg-red-500/10 rounded-lg text-slate-500 hover:text-red-400"><span class="material-symbols-outlined text-lg">delete</span></button>
                        </div>
                    </td>
                </tr>
                <tr class="hover:bg-white/[0.02] transition-colors group">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 bg-red-500/10 text-red-400 rounded-lg flex items-center justify-center font-bold text-xs">MT</div>
                            <div>
                                <p class="text-sm font-bold text-white uppercase tracking-tight">Mãos de Talatona</p>
                                <p class="text-[10px] text-slate-500 font-medium">ID: 15478-2023</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <span class="text-slate-300 font-medium">Talatona</span>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-slate-300 font-medium">Sofia Kanga</p>
                        <p class="text-[10px] text-slate-500">sk@maos.org.ao</p>
                    </td>
                    <td class="px-6 py-5 text-slate-400 text-xs">22 Nov 2023</td>
                    <td class="px-6 py-5">
                        <span class="px-3 py-1 bg-red-500/10 border border-red-500/20 text-red-400 text-[10px] font-bold uppercase rounded-full tracking-wider">Rejeitado</span>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">edit</span></button>
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">visibility</span></button>
                            <button class="p-2 hover:bg-red-500/10 rounded-lg text-slate-500 hover:text-red-400"><span class="material-symbols-outlined text-lg">delete</span></button>
                        </div>
                    </td>
                </tr>
                <tr class="hover:bg-white/[0.02] transition-colors group border-b-0">
                    <td class="px-6 py-5">
                        <div class="flex items-center gap-3">
                            <div class="w-9 h-9 bg-accent/10 text-accent rounded-lg flex items-center justify-center font-bold text-xs">SB</div>
                            <div>
                                <p class="text-sm font-bold text-white uppercase tracking-tight">Samba Solidária</p>
                                <p class="text-[10px] text-slate-500 font-medium">ID: 99281-2024</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-5">
                        <span class="text-slate-300 font-medium">Samba</span>
                    </td>
                    <td class="px-6 py-5">
                        <p class="text-slate-300 font-medium">António Manuel</p>
                        <p class="text-[10px] text-slate-500">a.manuel@samba.org</p>
                    </td>
                    <td class="px-6 py-5 text-slate-400 text-xs">15 Fev 2024</td>
                    <td class="px-6 py-5">
                        <span class="px-3 py-1 bg-green-500/10 border border-green-500/20 text-green-500 text-[10px] font-bold uppercase rounded-full tracking-wider">Aprovado</span>
                    </td>
                    <td class="px-6 py-5 text-right">
                        <div class="flex items-center justify-end gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">edit</span></button>
                            <button class="p-2 hover:bg-[#1e293b] rounded-lg text-slate-400 hover:text-white"><span class="material-symbols-outlined text-lg">visibility</span></button>
                            <button class="p-2 hover:bg-red-500/10 rounded-lg text-slate-500 hover:text-red-400"><span class="material-symbols-outlined text-lg">delete</span></button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="px-6 py-4 bg-[#0f172a]/50 border-t border-[#1e293b] flex items-center justify-between">
            <p class="text-xs text-slate-500 font-medium uppercase tracking-wide">Mostrando 1-5 de 124 ONGs</p>
            <div class="flex items-center gap-1">
                <button class="w-8 h-8 flex items-center justify-center border border-[#1e293b] rounded-lg text-slate-500 hover:bg-[#1e293b] transition-colors">
                    <span class="material-symbols-outlined text-sm">chevron_left</span>
                </button>
                <button class="w-8 h-8 flex items-center justify-center bg-accent/20 border border-accent/40 rounded-lg text-accent text-xs font-bold">1</button>
                <button class="w-8 h-8 flex items-center justify-center border border-[#1e293b] rounded-lg text-slate-400 hover:bg-[#1e293b] text-xs font-bold transition-colors">2</button>
                <button class="w-8 h-8 flex items-center justify-center border border-[#1e293b] rounded-lg text-slate-400 hover:bg-[#1e293b] text-xs font-bold transition-colors">3</button>
                <span class="text-slate-600 px-1">...</span>
                <button class="w-8 h-8 flex items-center justify-center border border-[#1e293b] rounded-lg text-slate-400 hover:bg-[#1e293b] text-xs font-bold transition-colors">25</button>
                <button class="w-8 h-8 flex items-center justify-center border border-[#1e293b] rounded-lg text-slate-500 hover:bg-[#1e293b] transition-colors">
                    <span class="material-symbols-outlined text-sm">chevron_right</span>
                </button>
            </div>
        </div>
    </div>
</HORIZONSystemLayout>
