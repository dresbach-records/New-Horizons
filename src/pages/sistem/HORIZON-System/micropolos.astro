---
import HORIZONSystemLayout from "@layouts/HORIZONSystemLayout.astro";

const micropolos = [
    {
        nome: "Polo Móvel Cidadania",
        lider: "Ana Costa",
        bairro: "Cazenga",
        status: "Operacional",
        tipo: "Unidade Móvel",
        id: "MPL-01"
    },
    {
        nome: "Tenda Digital Kilamba",
        lider: "João Pedro",
        bairro: "Kilamba",
        status: "Planejado",
        tipo: "Ponto Fixo",
        id: "MPL-02"
    },
     {
        nome: "Quiosque Informativo Rangel",
        lider: "Sofia Martins",
        bairro: "Rangel",
        status: "Inativo",
        tipo: "Ponto Fixo",
        id: "MPL-03"
    },
    {
        nome: "Base de Apoio Viana Sul",
        lider: "Manuel Kanga",
        bairro: "Viana",
        status: "Operacional",
        tipo: "Base Fixa",
        id: "MPL-04"
    }
];

const getStatusClass = (status) => {
    switch (status) {
        case "Operacional":
            return { bg: 'bg-green-500/10', text: 'text-green-400', shadow: 'shadow-green-500/20' };
        case "Planejado":
            return { bg: 'bg-blue-500/10', text: 'text-blue-400', shadow: 'shadow-blue-500/20' };
        case "Inativo":
            return { bg: 'bg-red-500/10', text: 'text-red-400', shadow: 'shadow-red-500/20' };
        default:
            return { bg: 'bg-slate-500/10', text: 'text-slate-400', shadow: '' };
    }
};
---

<HORIZONSystemLayout>
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-white">Gerenciamento de Micro Polos</h2>
         <button class="flex items-center gap-2 px-4 py-2 bg-teal-500 hover:bg-teal-500/80 rounded-lg text-xs font-bold uppercase tracking-wider text-white transition-all">
            <span class="material-symbols-outlined text-sm">add_business</span>
            Criar Novo Polo
        </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {micropolos.map(polo => {
            const statusClasses = getStatusClass(polo.status);
            return (
                <div class:list={[
                    "rounded-2xl border border-[#1e293b] flex flex-col transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl",
                    statusClasses.bg,
                    statusClasses.shadow
                ]}>
                    <div class="p-6 flex-1">
                        <div class="flex justify-between items-start">
                            <p class={`text-[10px] font-bold uppercase tracking-wider ${statusClasses.text}`}>{polo.status}</p>
                            <span class={`material-symbols-outlined text-sm ${statusClasses.text}`}>
                                {polo.tipo === 'Unidade Móvel' ? 'local_shipping' : 'business_center'}
                            </span>
                        </div>
                        <h3 class="text-lg font-extrabold text-white mt-3 uppercase tracking-tight">{polo.nome}</h3>
                        <p class="text-xs text-slate-400 mt-1">Bairro de {polo.bairro}</p>
                    </div>
                    <div class="border-t border-white/10 px-6 py-4">
                        <p class="text-xs text-slate-400"><span class="font-bold text-slate-300">Líder:</span> {polo.lider}</p>
                        <p class="text-[10px] text-slate-500 mt-1">ID do Polo: {polo.id}</p>
                    </div>
                </div>
            )
        })}
    </div>
</HORIZONSystemLayout>
