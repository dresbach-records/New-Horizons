---
interface Props {
	title: string;
	value: string;
}

const { title, value } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md flex items-center justify-between">
  <div>
    <p class="text-sm text-gray-500">{title}</p>
    <p class="text-2xl font-bold text-gray-800">{value}</p>
  </div>
  <slot />
</div>
