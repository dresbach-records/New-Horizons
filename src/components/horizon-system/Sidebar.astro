---
const { pathname } = Astro.url;

const menuItems = [
    { href: "/sistem/HORIZON-System/", label: "Dashboard", icon: "dashboard" },
    { href: "/sistem/HORIZON-System/cadastros", label: "Cadastros", icon: "app_registration" },
    { href: "/sistem/HORIZON-System/ongs", label: "ONGs", icon: "corporate_fare" },
    { href: "/sistem/HORIZON-System/espacos", label: "Espaços", icon: "share_location" },
    { href: "/sistem/HORIZON-System/micropolos", label: "Micro Polos", icon: "hub" },
    { href: "/sistem/HORIZON-System/captacao", label: "Captação", icon: "payments" },
    { href: "/sistem/HORIZON-System/aprovacoes", label: "Aprovações", icon: "fact_check" },
    { href: "/sistem/HORIZON-System/relatorios", label: "Relatórios", icon: "analytics" },
    { href: "/sistem/HORIZON-System/perfil", label: "Perfil", icon: "person" },
];
---

<aside class="w-72 bg-[#0f172a] text-slate-400 flex flex-col shrink-0 border-r border-[#1e293b] z-20">
    <div class="p-6 border-b border-[#1e293b] flex items-center gap-3">
        <div class="w-10 h-10 bg-accent rounded-xl flex items-center justify-center shadow-[0_0_15px_rgba(34,197,94,0.3)]">
            <span class="material-icons text-slate-900 font-bold">explore</span>
        </div>
        <div>
            <h1 class="font-bold text-lg leading-none uppercase tracking-tighter text-white">HORIZON</h1>
            <span class="text-[10px] opacity-60 font-semibold tracking-widest uppercase">Admin System</span>
        </div>
    </div>
    <nav class="flex-1 py-6 overflow-y-auto custom-scrollbar">
        <div class="px-6 mb-4 text-[10px] uppercase tracking-[0.2em] text-slate-500 font-bold">Menu Principal</div>
        {
            menuItems.map((item) => {
                const isActive = pathname === item.href || pathname === item.href + "/";
                return (
                    <a href={item.href} class:list={[
                        "flex items-center gap-3 px-6 py-3 transition-colors",
                        { "bg-accent/10 border-l-4 border-accent text-accent": isActive },
                        { "hover:bg-white/5": !isActive },
                    ]}>
                        <span class="material-symbols-outlined text-lg">{item.icon}</span>
                        <span class="text-sm font-medium">{item.label}</span>
                    </a>
                );
            })
        }
    </nav>
    <div class="p-6 mt-auto border-t border-[#1e293b]">
        <a href="/sistem/login" class="flex items-center gap-3 w-full px-4 py-3 text-slate-400 hover:text-red-400 hover:bg-red-400/10 transition-all rounded-xl group">
            <span class="material-symbols-outlined text-lg group-hover:scale-110 transition-transform">logout</span>
            <span class="text-sm font-bold uppercase tracking-wider">Sair da Conta</span>
        </a>
    </div>
</aside>
