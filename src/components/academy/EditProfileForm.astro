<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-bold mb-4">Editar Perfil</h2>
  <form>
    <div class="mb-4">
      <label for="name" class="block text-gray-700 font-bold mb-2">Nome</label>
      <input type="text" id="name" class="w-full px-3 py-2 border rounded-lg">
    </div>
    <div class="mb-4">
      <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
      <input type="email" id="email" class="w-full px-3 py-2 border rounded-lg">
    </div>
    <div class="mb-4">
      <label for="password" class="block text-gray-700 font-bold mb-2">Senha</label>
      <input type="password" id="password" class="w-full px-3 py-2 border rounded-lg">
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Salvar Alterações</button>
  </form>
</div>
