<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-bold mb-4">Entre em Contato</h2>
  <form>
    <div class="mb-4">
      <label for="subject" class="block text-gray-700 font-bold mb-2">Assunto</label>
      <input type="text" id="subject" class="w-full px-3 py-2 border rounded-lg">
    </div>
    <div class="mb-4">
      <label for="message" class="block text-gray-700 font-bold mb-2">Mensagem</label>
      <textarea id="message" rows="5" class="w-full px-3 py-2 border rounded-lg"></textarea>
    </div>
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Enviar Mensagem</button>
  </form>
</div>
